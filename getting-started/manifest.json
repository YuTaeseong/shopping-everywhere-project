{
  "name": "Shopping Everywhere",
  "description": "You can put your item at cart wherever you are",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "/images/shopping-cart16.png",
      "32": "/images/shopping-cart32.png",
      "64": "/images/shopping-cart64.png",
      "128": "/images/shopping-cart128.png"
    }
  },
  "icons": {
    "16": "/images/shopping-cart16.png",
    "32": "/images/shopping-cart32.png",
    "64": "/images/shopping-cart64.png",
    "128": "/images/shopping-cart128.png"
  },
  "web_accessible_resources" : [{
    "resources" : ["src/main.js", "src/button/float-button.js", "src/button-popup/button-popup.js", "images/no-item.jpg"],
    "matches" : ["<all_urls>"]
    }
  ]
}
